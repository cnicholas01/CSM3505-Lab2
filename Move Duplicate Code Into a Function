fun main() {

  println(getCityWeatherForecast("Ankara", 27,31, 82))
  
  println(getCityWeatherForecast("Tokyo", 32, 36, 10))
  
  println(getCityWeatherForecast("Cape Town", 59, 64, 2))
 
  println(getCityWeatherForecast("Guatemala City", 50, 55, 7))
}

fun getCityWeatherForecast(city: String, lowTemp: Int, highTemp: Int, rain: Int): String{
    return "City: $city\nLow temperature: $lowTemp, High temperature: $highTemp\nChance of rain: $rain%\n"
}
